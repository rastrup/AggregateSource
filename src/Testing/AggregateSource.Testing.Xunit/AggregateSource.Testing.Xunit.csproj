  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="xunit" Version="2.4.1" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Content\XunitAssertionExtensions.cs" />
  </ItemGroup>
